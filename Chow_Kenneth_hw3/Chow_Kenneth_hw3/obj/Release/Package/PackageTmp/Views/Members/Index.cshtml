@model IEnumerable<Chow_Kenneth_hw3.Models.Member>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <!--Labels for first, last name; email; phone; major; text-->
    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
               Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Ok To Text?
            </th>
            <th>
                Major
            </th>
            <th></th>
        </tr>
        <!--Populates each row from the database-->
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.str_FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.str_LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.str_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.str_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bool_OKToText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.int_MemberID }) |
                @Html.ActionLink("Details", "Details", new { id=item.int_MemberID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.int_MemberID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
